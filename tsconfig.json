{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noLib": false,
        "target": "es6",
        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*"
    ]
}